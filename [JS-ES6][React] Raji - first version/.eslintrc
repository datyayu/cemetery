{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "modules": true,
    "forOf": true,
    "templateStrings": true,
    "jsx": true
  },

  "rules": {
    "camelcase": [2, {"properties": "always"}],
    "comma-spacing": [2, {"before": false, "after": true}],
    "eqeqeq": 2,
    "func-style": [2, "expression"],
    "indent": [2, 2],
    "new-cap": 0,
    "no-console": 0,
    "no-else-return": 2,
    "no-multi-spaces": 0,
    "no-trailing-spaces": 2,
    "quotes": [1, "single"],
    "semi": [2, "never"],
    "space-before-blocks": 2,
    "space-before-function-paren": 2,
  },

  "parser": "babel-eslint",

  "plugins": [
    "react"
  ]
}
