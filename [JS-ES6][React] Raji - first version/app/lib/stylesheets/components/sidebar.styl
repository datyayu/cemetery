.Sidebar
  background $box_color
  box-sizing border-box
  color $light_text
  display flex
  flex-direction column
  font-size .6em
  justify-content space-between
  max-width 100px
  min-height 100vh
  min-width 100px
  smoothTransition()
  text-align center
  z-indez 99

  &-icon
    font-size 3.5em

  &-link
    display block
    padding 1em 0

  &-item
    border-bottom 1px solid $light_text
    cursor pointer
    user-select none
    &:first-child
      padding 0
      > p
        display none
    &:hover, &:active, &:focus, &.is-active
      color $clear_text

  &-list
    box-sizing border-box
    margin 0
    padding .2em 1.3em

  &-logo
    &-image
      height 75px
      margin-left -.6em
      width 75px
    &-text
      color $clear_text
      font-weight bold
      display none
      font-size 3em
      margin 0

  &-text
    margin 0

  &-userImage
    border-radius 50%
    height 50px
    width 50px

  &-userName
    cursor pointer
    font-size 1.5em
    margin-top 0
    user-select none
    &:hover, &:active, &:focus
      color $clear_text


@media screen and (max-width $query_large)
  .Sidebar
    max-width 60%
    min-height 100%
    min-width 60%
    left -60%
    position absolute
    top 0
    z-index 1

    &-list
      overflow-y auto

    &-logo
      align-items center
      display flex
      width 100%
      justify-content center
      &-image
        height 45px
        margin-right 1em
        padding 2px
        width 40px
      &-text
        display block

    &-item
      width 100%
      padding 1em 0

    &-link
      align-items center
      display flex
      justify-content flex-start
      padding 1em 1em

    &-text
      align-self center
      font-size 1.5em
      overflow(ellipsis)

    &-icon
      font-size 2em
      margin-right 1em
      width 1em

    &-user
      align-items center
      display flex
      justify-content flex-start
      padding 1em 2em

    &-userName
      align-self center
      margin 0 0 0 1em

    &-userImage
      height 30px
      width 30px

  .move-right
    .Sidebar
      left 0
