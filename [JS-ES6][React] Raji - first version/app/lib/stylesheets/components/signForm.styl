.signFormModal
  position fixed
  background rgba(black, 0.4)
  z-index 3
  top 0
  left 0
  height 100vh
  width 100vw
  display flex
  align-items center
  justify-content center

.signForm
  color white
  display flex
  align-items center
  background rgba(black, .9)
  padding 3em 5em
  flex-direction column
  border-radius 5px

  &-error
    color white
    font-size 1.5em
    background rgba(red, .5)
    width 100%

  &-inputContainer
    align-items center
    display flex
    flex-direction column

  &-input
    display block
    color $tertiary_color
    border-radius 5px
    font-size 2em
    padding .3em
    border none
    background rgba(white, .9)
    margin-bottom 1em

  &-submitButton
    border-radius 8px
    width 50%
    background-color $secondary_color
    border 1px solid $tertiary_color
    font-size 2em
    color white
    margin-bottom 1em

  &-text
    font-size 1.2em
    &Link
     color $primary_color
     cursor pointer
     font-size 1.1em
