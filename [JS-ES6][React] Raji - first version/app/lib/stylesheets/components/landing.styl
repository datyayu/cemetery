.Landing  
  background-image url("/public/assets/img/landing-image.jpg")
  background-size cover
  height 100vh
  width 100vw

  &-background
    align-items center
    background rgba($box_color, .5)
    display flex
    flex-direction column
    height 100vh
    justify-content center
    width 100vw

  &-logo
    height 255px
    pointer-events none
    user-drag none
    user-select none
    width 255px
  
  &-buttonsContainer
    display flex
    justify-content space-between
    margin-left 1em // Fixes the extra letter on about
    margin-top 2em
    
  &-button
    background none
    border 3px solid $light_text
    border-radius 18px
    color $light_text
    font-size 2em
    margin 0em 1em
    outline none
    padding .5em 2em
    smoothTransition(200ms)
    user-select none
    

  &-button--play
    border-color $primary_color
    color $primary_color
    &:hover, &:active, &:focus
      background $primary_color
      border-color $clear_text
      box-shadow 0px 0px 20px rgba($clear_text, .5)
      color $clear_text
      
  &-button--blog
    &:hover, &:active, &:focus
      border-color $clear_text
      box-shadow 0px 0px 10px 1px #00cc00, 
                 inset 0px 0px 10px 1px #00cc00
      color $clear_text
      text-shadow 0px 0px 10px #00cc00

  &-button--about
    &:hover, &:active, &:focus
      border-color $clear_text
      box-shadow 0px 0px 10px 1px $secondary_color, 
                 inset 0px 0px 10px 1px $secondary_color
      color $clear_text
      text-shadow 0px 0px 10px rgba($secondary_color, 1)


@media screen and (max-width $query_large)
  .Landing
    &-logo
      height 150px
      width 150px
      
    &-buttonsContainer
      flex-direction column
      margin 1em 0 0 0
    
    &-button
      margin .2em 0em
      padding .5em 0em
      width 8em
      
    &-button--play
      order 1
    &-button--blog
      order 2
    &-button--about
      order 3
      
@media screen and (max-width $query_large) and (orientation landscape)
  .Landing
    &-buttonsContainer
      flex-direction row
      
    &-logo
      height 150px
      width 150px
      
    &-button
      font-size 1.5em
      margin 0em .5em
      max-width 7em
      
    &-button--play
      order 2
    &-button--blog
      order 1
